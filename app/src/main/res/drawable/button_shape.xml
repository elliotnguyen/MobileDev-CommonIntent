<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#336699" /> <!-- Change color for pressed state -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Button focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#99ccff" /> <!-- Change color for focused state -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4285F4" /> <!-- Default color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>